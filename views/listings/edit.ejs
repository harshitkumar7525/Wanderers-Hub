<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit this Listing</h3>
      <form
        action="/listings/<%= listing._id %>/edit?_method=PUT"
        method="post"
      >
        <div>
          <label for="title" class="form-label"> Title </label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
          />
        </div>
        <div>
          <label for="description" class="form-label"> Description </label>
          <textarea class="form-control" name="listing[description]"><%= listing.description.trim() %></textarea
          >
        </div>
        <div>
          <label for="image" class="form-label"> Image Link: </label>
          <input
            class="form-control"
            type="text"
            name="listing[image]"
            value="<%= listing.image %>"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              class="form-control"
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
            />
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label"> Country </label>
            <input
              class="form-control"
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
            />
          </div>
        </div>
        <div>
          <label for="location" class="form-label"> Location </label>
          <input
            class="form-control"
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
          />
        </div>
        <button class="btn btn-dark edit-btn mt-3">Submit</button>
      </form>
      <br /><br />
    </div>
  </div>
</body>
