<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <br /><br />
    <form action="/listings" method="post" class="needs-validation" novalidate>
      <div>
        <label for="title" class="form-label"> Title </label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please provide a valid title</div>
      </div>
      <div>
        <label for="description" class="form-label"> Description </label>
        <textarea
          name="listing[description]"
          placeholder="Enter the description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Sounds fun</div>
        <div class="invalid-feedback">Please provide a description</div>
      </div>
      <div>
        <label for="image" class="form-label"> Image Link: </label>
        <input
          type="text"
          name="listing[image]"
          placeholder="Enter the image URL/link"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder="Enter the price"
            class="form-control"
            required
          />
          <div class="valid-feedback">Amazing pricing!</div>
          <div class="invalid-feedback">Please provide a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label"> Country </label>
          <input
            type="text"
            name="listing[country]"
            placeholder="Enter the country"
            class="form-control"
            required
          />
          <div class="valid-feedback">Seems to be fun</div>
          <div class="invalid-feedback">Please provide a valid country</div>
        </div>
      </div>
      <div>
        <label for="location" class="form-label"> Location </label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Enter the location"
          class="form-control"
          required
        />
        <div class="valid-feedback">Nice location!</div>
        <div class="invalid-feedback">Please provide a valid location</div>
      </div>
      <br />
      <button class="mt-3 btn btn-dark add-btn">Add</button>
    </form>
    <br /><br />
  </div>
</div>
